@inject IJSRuntime JsRuntime
<div id="@id">
    <textarea id="textarea-@id" class="markdown-textbox" style="height: @(height)px" name="Content" placeholder="Markdown supported... You can also drag and drop or use ctrl+v to upload file into the editor.">@content</textarea>
</div>

@functions
{
    [Parameter] string id { get; set; }
    [Parameter] string content { get; set; }
    [Parameter] int height { get; set; } = 150;

    protected override async Task OnAfterRenderAsync()
    {
        EnableDragAndDropAsync();
    }

    private async Task EnableDragAndDropAsync()
    {
        await JsRuntime.InvokeAsync<object>("DropEnable");
    }
}